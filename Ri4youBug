.github/workflows/
Button crashButton = findViewById(R.id.crashBtn);
crashButton.setOnClickListener(v -> {
    throw new RuntimeException("Simulated crash for testing!");
});
name: Build & Sign APK

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up JDK
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: Decode Keystore
        run: |
          echo "${{ secrets.KEYSTORE_FILE }}" | base64 --decode > ri4you-keystore.jks

      - name: Build Release APK
        run: ./gradlew assembleRelease

      - name: Sign APK
        run: |
          for apk in app/build/outputs/apk/release/*.apk; do
            jarsigner -verbose \
              -keystore ri4you-keystore.jks \
              -storepass "${{ secrets.KEYSTORE_PASSWORD }}" \
              -keypass "${{ secrets.KEY_PASSWORD }}" \
              "$apk" "${{ secrets.KEY_ALIAS }}"
          done

      - name: Upload Signed APK
        uses: actions/upload-artifact@v4
        with:
          name: Signed-APK
          path: app/build/outputs/apk/release/*.apk
